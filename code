        */

        DefaultCategoryDataset Dataset = new DefaultCategoryDataset();

        Dataset.setValue(5, "Logistica", "Fevereiro");
        Dataset.setValue(2, "Outros", "Março");
        Dataset.setValue(1, "Atrazo de Devolução", "Abril");
        Dataset.setValue(3, "Defeito de Produto", "Maio");

        JFreeChart barChart = ChartFactory.createBarChart("Reclamaçoes", "Mes", "Quantidade", Dataset, PlotOrientation.VERTICAL,false,true,false);
        CategoryPlot barChrt = barChart.getCategoryPlot();

        barChrt.setRangeGridlinePaint(Color.red);
        ChartFrame frame=new ChartFrame("Reclamação", barChart);
        frame.setVisible(true);
        frame.setSize(1000,1000);

    }                                             

    private void btn_ConfirmarActionPerformed(java.awt.event.ActionEvent evt) {                                              

        resposta resp= new resposta();
        respostaBD r = new respostaBD();

        resp.setResponsavel(txt_responsavel.getText());
        resp.setMotivo(txt_motivo.getText());

        if(rb_Aceita.isSelected())
        resp.setReclamaAceita(rb_Aceita.getText());
        if(rb_negada.isSelected())
        resp.setReclamaRejeitada(rb_negada.getText());

        respostaBD.inserir(resp);

    }                                             

