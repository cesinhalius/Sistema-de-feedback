    /**
     * This method is called from within the constructor to initialize the form.
     * WARNING: Do NOT modify this code. The content of this method is always
     * regenerated by the Form Editor.
     */
     public void readTable(){
          DefaultTableModel modelo=(DefaultTableModel) Table_Reclamacao.getModel();
          
          modelo.setNumRows(0);
          
          informacoesBD infoBD = new informacoesBD();
          
          for(informacoes i:infoBD.read()){
              modelo.addRow(new Object[]
              {
              
              i.getCodigo(),
              i.getNumReclamacao(),
              i.getNome(),
              i.getEndereço(),
              i.getCEP(),
              i.getCPF(),
              i.getCidade(),
              i.getEmail(),
              i.getTelefone(),
              i.getDataNota(),
              i.getCodigoDaNota(),
              i.getReclamacao(),
              i.getTipoReclamacao(),
              i.getRegistro(),
              i.getDocumento()
              });
          }
    }
