    private void rb_outrosActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
    }                                         

    private void btn_ProcurarActionPerformed(java.awt.event.ActionEvent evt) {                                             
        JFileChooser arquivo = new JFileChooser();
        arquivo.setDialogTitle("Selecione uma imagem");
        arquivo.setFileSelectionMode(JFileChooser.FILES_ONLY);

        int opc = arquivo.showOpenDialog(this);
        if(opc==JFileChooser.APPROVE_OPTION){
            File file = new File("Caminho");
            file = arquivo.getSelectedFile();// Recebe o caminho
            String Filename = file.getAbsolutePath();
            txt_Caminho.setText(Filename);

            ImageIcon imagem = new ImageIcon(arquivo.getSelectedFile().getPath());
            lbl_Imagem.setIcon(new ImageIcon(imagem.getImage().getScaledInstance(lbl_Imagem.getWidth(), lbl_Imagem.getHeight(), Image.SCALE_DEFAULT)));
        }

    }                                            

    private void btn_AdicionaActionPerformed(java.awt.event.ActionEvent evt) {                                             

        informacoes info=new informacoes();
        informacoesBD infoBD=new informacoesBD();

        info.setCodigo(Integer.parseInt(txt_CodCliente.getText()));
        info.setNome(txt_NomeCliente.getText());
        info.setEndereço(txt_endereco.getText());
        info.setCidade(txt_cidade.getText());
        info.setEmail(txt_Email.getText());
        info.setTelefone(Integer.parseInt(txt_telefone.getText()));
        info.setDataNota(Date.valueOf(txt_DataNotaFiscal.getText()));
        info.setReclamacao(txt_Reclamacao.getText());
        info.setCodigoDaNota(Integer.parseInt(txt_codigoNota.getText()));
        info.setCEP(Integer.parseInt(txt_CEP.getText()));
        info.setCPF(Integer.parseInt(txt_CPF.getText()));

        if(rb_Atentimento.isSelected())
        info.setTipoReclamacao(rb_Atentimento.getText());
        if(rb_defeito.isSelected())
        info.setTipoReclamacao(rb_defeito.getText());
        if(rb_atrasso.isSelected())
        info.setTipoReclamacao(rb_atrasso.getText());
        if(rb_outros.isSelected())
        info.setTipoReclamacao(txt_Outro.getText());

        if(cb_telefone.isSelected())
        info.setRegistro(cb_telefone.getText());
        if(cb_presencial.isSelected())
        info.setRegistro(cb_presencial.getText());

        if(cb_email.isSelected())
        info.setRegistro(cb_email.getText());

        if(rb_Sim.isSelected())
        info.setDocumento(rb_Sim.getText());

        if(rb_Nao.isSelected())
        info.setDocumento(rb_Nao.getText());

        informacoesBD.inserir(info);
    }                                            

    private void btn_FinalizarActionPerformed(java.awt.event.ActionEvent evt) {                                              

        /* try {
            Connection con = ConexaoBD.criaConexao();
            PreparedStatement pst = null;
            ResultSet rs= null;
            String sql = "SELECT count(dataReclamacao) FROM reclamacao where dataReclamacao like '2010' = ?";

            pst = con.prepareStatement(sql);
            pst.setInt(1,Integer.parseInt(txt_DataReclamacao.getText()));
